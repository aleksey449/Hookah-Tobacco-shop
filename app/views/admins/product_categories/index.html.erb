<h1>Listing Product Categories</h1>

<ul>
  <% @product_categories.each do |product_category| %>
    <li>
      <%= link_to product_category.name, product_category%>
      <%= link_to "Edit", edit_admins_product_category_path(product_category) %></li>
      <%= link_to "Destroy", admins_product_category_path(product_category),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
     </li>
  <% end %>
</ul>

<%= link_to "New Product Category", new_admins_product_category_path %>
