<%= form_with model: product_manufacturer do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <% product_manufacturer.errors.full_messages_for(:name).each do |message|%>
        <div><%= message %></div>
    <% end %>
    </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% product_manufacturer.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
    <% end %>
    </div>

  <div>
    <%= form.submit %>
  </div>
 <% end %>   