<%= form_with model: product_template do |form| %>
  <div class="field">
    <div class="control">
       <%= form.label :name %>
      <%= form.text_field :name %>
          <% product_template.errors.full_messages_for(:name).each do |message|%>
        <div><%= message %></div>
    <% end %>
    </div>
  </div>
  <div class="field">
    <div class="control">
       <%= form.label :price %>
      <%= form.text_field :price %>
          <% product_template.errors.full_messages_for(:price).each do |message|%>
        <div><%= message %></div>
    <% end %>
    </div>
  </div>
  <div class="field">
    <div class="control">
       <%= form.label :description %>
      <%= form.text_field :description %>
          <% product_template.errors.full_messages_for(:description).each do |message|%>
        <div><%= message %></div>
    <% end %>
    </div>
  </div>
  <div class="field">
    <div class="control">
       <%= form.label :product_category %>
      <%= form.select :product_category_id, ProductCategory.all.map {|p| [p.name, p.id] } %>
    </div>
  </div>
    <div class="field">
    <div class="control">
       <%= form.label :product_manufacturer %>
      <%= form.select :product_manufacturer_id, ProductManufacturer.all.map {|p| [p.name, p.id] } %>
    </div>
  </div>
   <div>
    <%= form.submit %>
  </div>
  <% end %>